{
  "manifest_version": 3,
  "name": "Text Analyzer",
  "version": "1.0",
  "description": "Analyze text to count words, special characters, and numbers.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png"
    },
    "default_width": 400,
    "default_height": 600
  },
  "icons": {
    "16": "images/icon16.png"
  }
}
